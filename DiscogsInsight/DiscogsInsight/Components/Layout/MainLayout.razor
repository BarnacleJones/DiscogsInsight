@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Padding="0">
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/BarnacleJones/DiscogsInsight" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <Navbar/>
    </MudDrawer>
    <MudMainContent MaxWidth="MaxWidth.Medium" Elevation="0">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    //set dark mode
    private MudTheme _theme = new();
    bool isDarkMode = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}