@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="Discogs Insight" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Collection" Icon="explore" Path="CollectionGrid" />
            <RadzenPanelMenuItem Text="Random" Icon="autorenew" Path="RandomRelease"/>
            <RadzenPanelMenuItem Text="Settings" Icon="build" Path="Settings"/>
            <RadzenPanelMenuItem Text="Github" Icon="code" Path="https://github.com/BarnacleJones/DiscogsInsight" />
        </RadzenPanelMenu>
        <div class="rz-p-4">
            @* Sidebar additional content *@
        </div>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
       @*  <div class="rz-text-align-left">
            <RadzenLink Icon="code" Path="https://github.com/BarnacleJones/DiscogsInsight" Text="View Code" />
        </div> *@
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
}